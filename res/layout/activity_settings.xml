<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/backdrop"
    tools:context="com.example.kd.roadrage_new.Settings">

    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_button_settings"
        android:background="@drawable/custom_button1_click"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:textSize="25sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/settings_scroll"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <Button
                    android:text=""
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/back_button_settings"
                    android:layout_weight="0.06"
                    android:textSize="35sp"
                    android:background="@drawable/custom_backbutton"
                    android:rotation="-90"
                    android:textColor="@android:color/background_light"
                    android:layout_marginLeft="-30dp"
                    android:layout_marginTop="-10dp" />

                <TextView
                    android:text="Settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/settings_heading_textView"
                    android:layout_weight="1"
                    android:textSize="35sp"
                    android:background="@drawable/custom_button1"
                    android:textColor="@android:color/background_light"
                    android:textAlignment="center" />

            </LinearLayout>

            <TextView
                android:text="Control Sensitivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@android:color/background_light"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:textColor="@android:color/background_light"
                    android:textAlignment="viewStart" />

                <SeekBar
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:max="3"
                    android:progress="1"
                    android:id="@+id/motion_seekBar"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="0.77" />

                <TextView
                    android:text="High"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:textColor="@android:color/background_light"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <TextView
                android:text="Select your car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/car_select_textView"
                android:textAlignment="textStart"
                android:textSize="25sp"
                android:textColor="@android:color/background_light"
                android:layout_marginTop="0dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:id="@+id/car_selection">

                        <RadioButton
                            android:layout_height="100dp"
                            android:id="@+id/car_radio_1"
                            android:layout_weight="1"
                            android:button="@drawable/car_100dp"
                            android:background="@drawable/custom_radio"
                            android:layout_margin="15dp"
                            android:layout_width="100dp"
                            android:textAlignment="center" />

                        <RadioButton
                            android:id="@+id/car_radio_2"
                            android:layout_weight="1"
                            android:button="@drawable/car2_100dp"
                            android:background="@drawable/custom_radio"
                            android:layout_margin="15dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:textAlignment="center" />

                        <RadioButton
                            android:id="@+id/car_radio_3"
                            android:layout_weight="1"
                            android:button="@drawable/car3_100dp"
                            android:background="@drawable/custom_radio"
                            android:layout_margin="15dp"
                            android:layout_height="100dp"
                            android:layout_width="100dp"
                            android:textAlignment="center" />

                        <RadioButton
                            android:id="@+id/car_radio_4"
                            android:layout_weight="1"
                            android:button="@drawable/car4_100dp"
                            android:background="@drawable/custom_radio"
                            android:layout_margin="15dp"
                            android:layout_height="100dp"
                            android:layout_width="100dp"
                            android:textAlignment="center" />

                    </RadioGroup>


                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:text="Select your Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginTop="20sp"
                android:textAlignment="textStart"
                android:textSize="25sp"
                android:textColor="@android:color/background_light" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="100dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <RadioGroup
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/env_selection">

                        <RadioButton
                            android:button="@drawable/desert"
                            android:id="@+id/env1"
                            android:layout_weight="1"
                            android:background="@drawable/env_radio"
                            android:layout_margin="15dp"
                            android:layout_height="100dp"
                            android:layout_width="100dp"
                            android:textAlignment="center"/>

                        <RadioButton
                            android:id="@+id/env2"
                            android:button="@drawable/grassland"
                            android:layout_weight="1"
                            android:background="@drawable/env_radio"
                            android:layout_margin="15dp"
                            android:layout_height="100dp"
                            android:layout_width="100dp"
                            android:textAlignment="center"/>

                        <RadioButton
                            android:button="@drawable/seashore"
                            android:layout_margin="15dp"
                            android:layout_height="100dp"
                            android:layout_width="100dp"
                            android:id="@+id/env3"
                            android:layout_weight="1"
                            android:background="@drawable/env_radio"/>

                        <RadioButton
                            android:button="@drawable/random"
                            android:layout_margin="15dp"
                            android:layout_height="100dp"
                            android:layout_width="100dp"
                            android:id="@+id/env4"
                            android:layout_weight="1"
                            android:background="@drawable/env_radio"/>

                    </RadioGroup>
                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
