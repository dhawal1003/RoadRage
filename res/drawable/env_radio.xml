<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:android.shape="rectangle">
            <gradient android:startColor="#ffffff" android:centerColor="#f8f7f9" android:endColor="#f2f1f4" android:angle="90"/>
            <corners android:radius="8dp"/>
            <stroke android:width="7dp" android:color="#00ffffff"/>
            <padding android:left="15dp" android:right="15dp" android:top="15dp" android:bottom="15dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#c17a0b" android:centerColor="#d18816" android:endColor="#d09841" android:angle="90"/>
            <corners android:radius="8dp"/>
            <stroke android:width="7dp" android:color="#ffffff"/>
            <padding android:left="15dp" android:right="15dp" android:top="15dp" android:bottom="15dp" />
        </shape>
    </item>
</selector>